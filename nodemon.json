{
  "watch": [
    "server.js",
    "server/**/*"
  ],
  "ext": "js,json,ts",
  "ignore": [
    "node_modules/**/*",
    "dist/**/*",
    "build/**/*",
    "*.test.js",
    "*.spec.js",
    "coverage/**/*",
    ".git/**/*",
    "*.log",
    "src/**/*",
    "public/**/*"
  ],
  "delay": "1000",
  "env": {
    "NODE_ENV": "development"
  },
  "events": {
    "restart": "echo \"Server restarted due to changes\""
  },
  "verbose": true,
  "colours": true,
  "legacy-watch": false
} 